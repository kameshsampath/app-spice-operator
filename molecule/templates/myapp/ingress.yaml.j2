apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: myapp
  namespace: {{ namespace }}
  labels:
    app: myapp
spec:
  rules:
    - host: 'myapp.{{ namespace }}.{{ cluster_ip | default('127.0.0.1') }}.nip.io'
      http:
        paths:
          - backend:
              serviceName: myapp
              servicePort: 80
